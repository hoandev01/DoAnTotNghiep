@model ChickenF.Models.Employee
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-2xl mx-auto mt-8 px-4">
    <h1 class="text-2xl font-bold text-red-600 mb-2">Delete Employee</h1>
    <h4 class="text-gray-700 mb-6">Are you sure you want to delete this customer?</h4>

    <div class="bg-white shadow rounded-lg">
        <div class="p-6">
            <dl>
                <div class="flex mb-4">
                    <dt class="w-1/3 font-medium text-gray-600">Full Name</dt>
                    <dd class="w-2/3 text-gray-900">@Model.FullName</dd>
                </div>

                <div class="flex mb-4">
                    <dt class="w-1/3 font-medium text-gray-600">Username</dt>
                    <dd class="w-2/3 text-gray-900">@Model.Username</dd>
                </div>

                <div class="flex mb-4">
                    <dt class="w-1/3 font-medium text-gray-600">Phone Number</dt>
                    <dd class="w-2/3 text-gray-900">@Model.Phone</dd>
                </div>

                <div class="flex mb-2">
                    <dt class="w-1/3 font-medium text-gray-600">Email</dt>
                    <dd class="w-2/3 text-gray-900">@Model.Email</dd>
                </div>
            </dl>
        </div>

        <div class="border-t px-6 py-4 bg-gray-50 flex gap-3">
            <form asp-action="Delete" method="post" class="flex gap-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit"
                        class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm font-medium shadow">
                    Delete
                </button>
                <a asp-action="Index"
                   class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 text-sm font-medium shadow">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
