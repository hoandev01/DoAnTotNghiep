@model ChickenF.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="flex items-center justify-center min-h-screen bg-gray-50">
    <div class="px-8 py-6 mx-auto mt-4 text-left bg-white shadow-lg rounded-lg w-full max-w-md">
        <h1 class="text-3xl font-bold text-center text-gray-900 mb-4">Create an Account</h1>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
                <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" placeholder="Your Name">
                <span asp-validation-for="Name" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
                <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username">
                <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Email">
                <span asp-validation-for="Email" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6 text-center">
                <button class="w-full px-4 py-2 font-bold text-white bg-gray-800 rounded-full hover:bg-gray-700 focus:outline-none focus:shadow-outline" type="submit">
                    Register
                </button>
            </div>
            <hr class="mb-4">
            <div class="text-center">
                <a class="inline-block right-0 align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" asp-controller="Account" asp-action="Login">
                    Already have an account?
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
