@model ChickenF.Models.Tracking

@{
    ViewData["Title"] = "Create Tracking";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Create Tracking</h1>

    <form asp-action="Create" method="post" class="space-y-5">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

        <div>
            <label asp-for="FlockId" class="block text-gray-700 font-medium mb-1"></label>
            <select asp-for="FlockId" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" asp-items="ViewBag.FlockId"></select>
            <span asp-validation-for="FlockId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="TrackingDate" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="TrackingDate" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="TrackingDate" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="HealthStatus" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="HealthStatus" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="HealthStatus" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Temperature" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Temperature" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Temperature" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Humidity" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="Humidity" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Humidity" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="FeedCost" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="FeedCost" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="FeedCost" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Note" class="block text-gray-700 font-medium mb-1"></label>
            <textarea asp-for="Note" rows="4" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400"></textarea>
            <span asp-validation-for="Note" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-4 mt-6">
            <button type="submit" class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition">➕ Create</button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900 hover:underline transition">← Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
