@model ChickenF.Models.Tracking

@{
    ViewData["Title"] = "Delete Tracking";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-red-600 mb-4">Delete Tracking</h1>
    <p class="text-gray-700 mb-4">Are you sure you want to delete this tracking record?</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-800 mb-6">
        <div>
            <span class="font-semibold">ID:</span> @Model.Id
        </div>
        <div>
            <span class="font-semibold">Flock:</span> @Model.Flock?.FlockName
        </div>
        <div>
            <span class="font-semibold">Tracking Date:</span> @Model.TrackingDate.ToString("yyyy-MM-dd")
        </div>
        <div>
            <span class="font-semibold">Health Status:</span> @Model.HealthStatus
        </div>
        <div>
            <span class="font-semibold">Temperature:</span> @Model.Temperature
        </div>
        <div>
            <span class="font-semibold">Humidity:</span> @Model.Humidity
        </div>
        <div>
            <span class="font-semibold">Feed Amount:</span> @Model.FeedCost
        </div>
        <div class="col-span-full">
            <span class="font-semibold">Note:</span> @Model.Note
        </div>
    </div>

    <form asp-action="Delete" method="post" class="flex gap-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700 transition">🗑️ Delete</button>
        <a asp-action="Index" class="text-gray-600 hover:underline hover:text-gray-800 transition">← Cancel</a>
    </form>
</div>
