@model ChickenF.Models.OrderDetail

@{
    ViewData["Title"] = "Chi tiết Chi tiết đơn hàng";
}
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="max-w-3xl mx-auto mt-12 px-6">

    <h1 class="text-4xl font-extrabold mb-10 text-gray-900">Chi tiết Chi tiết đơn hàng</h1>

    <section class="bg-white rounded-xl shadow p-10 space-y-6">

        <dl>
            <div class="mb-4">
                <dt class="text-gray-700 font-semibold">Đơn hàng</dt>
                <dd class="text-gray-900">@Model.Order?.Id</dd>
            </div>

            <div class="mb-4">
                <dt class="text-gray-700 font-semibold">Sản phẩm</dt>
                <dd class="text-gray-900">@Model.Product?.ProductName</dd>
            </div>

            <div class="mb-4">
                <dt class="text-gray-700 font-semibold">Số lượng</dt>
                <dd class="text-gray-900">@Model.OrderDetailQuantity</dd>
            </div>

            <div class="mb-4">
                <dt class="text-gray-700 font-semibold">Đơn giá</dt>
                <dd class="text-gray-900">@Model.OrderDetailPrice.ToString("N2") đ</dd>
            </div>
        </dl>

        <div class="flex justify-between mt-8">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-black text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-900 transition">Sửa</a>
            <a asp-action="Index" class="text-indigo-600 hover:underline">Quay lại danh sách</a>
        </div>
    </section>
</div>
