@model ChickenF.Models.User

@{
    ViewData["Title"] = "Chi tiết Người dùng";
}

<div class="max-w-3xl mx-auto mt-12 px-6">

    <h1 class="text-5xl font-extrabold mb-10 text-gray-900">Chi tiết Người dùng</h1>

    <section class="bg-white rounded-xl shadow p-10 space-y-8">

        <dl class="space-y-4">
            <div>
                <dt class="text-gray-700 font-semibold">FullName</dt>
                <dd class="text-gray-900 text-lg">@Model.FullName</dd>
            </div>

            <div>
                <dt class="text-gray-700 font-semibold">UserName</dt>
                <dd class="text-gray-900 text-lg">@Model.Username</dd>
            </div>

            <div>
                <dt class="text-gray-700 font-semibold">Email</dt>
                <dd class="text-gray-900 text-lg">@Model.Email</dd>
            </div>

            <div>
                <dt class="text-gray-700 font-semibold">Phone</dt>
                <dd class="text-gray-900 text-lg">@Model.Phone</dd>
            </div>

            <div>
                <dt class="text-gray-700 font-semibold">Role</dt>
                <dd class="text-gray-900 text-lg">
                    @{
                        string roleName = Model switch
                        {
                            ChickenF.Models.Admin => "Administrator",
                            ChickenF.Models.Employee => "Staff",
                            ChickenF.Models.Customer => "Customer",
                            _ => "Unknown"
                        };
                    }
                    @roleName
                </dd>
            </div>
        </dl>

        <div class="flex justify-between mt-10">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-black text-white font-semibold px-6 py-3 rounded-lg hover:bg-gray-800 transition">Sửa</a>
            <a asp-action="Index" class="text-indigo-600 hover:underline">Quay lại danh sách</a>
        </div>
    </section>
</div>
