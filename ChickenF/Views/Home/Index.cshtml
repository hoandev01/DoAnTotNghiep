    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const counters = document.querySelectorAll('.counter');

            const options = {
                root: null,
                threshold: 0.6
            };

            const animateCount = (el, target) => {
                const speed = 50; // càng nhỏ càng nhanh
                const randomStart = Math.floor(Math.random() * target / 2); // bắt đầu random từ 0~50% giá trị
                let count = randomStart;
                const update = () => {
                    const increment = Math.ceil((target - count) / 10);
                    count += increment;
                    if (count >= target) {
                        el.textContent = target + (target >= 1000 ? "+" : (el.dataset.unit || ''));
                    } else {
                        el.textContent = count;
                        requestAnimationFrame(update);
                    }
                };
                update();
            };

            const observer = new IntersectionObserver((entries, obs) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const el = entry.target;
                        const target = +el.getAttribute('data-target');
                        animateCount(el, target);
                        obs.unobserve(el); // chỉ chạy 1 lần
                    }
                });
            }, options);

            counters.forEach(counter => {
                observer.observe(counter);
            });
        });
    </script>
