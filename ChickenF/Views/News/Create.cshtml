@model ChickenF.Models.NewsArticle

@{
    ViewData["Title"] = "Add News";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto px-6 py-10">
    <h2 class="text-3xl font-bold text-blue-700 mb-6 flex items-center gap-2">📝 Add News Article</h2>

    <form asp-action="Create" method="post" class="space-y-6 bg-white p-6 rounded-xl shadow border border-gray-200">
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
            <input asp-for="Title" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="ImageNews" class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
            <input asp-for="ImageNews" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="ImageNews" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Summary" class="block text-sm font-medium text-gray-700 mb-1">Summary</label>
            <textarea asp-for="Summary" rows="3" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Summary" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Content" class="block text-sm font-medium text-gray-700 mb-1">Content</label>
            <textarea asp-for="Content" rows="7" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Content" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex gap-4 pt-4">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded-lg shadow transition">➕ Add</button>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-lg transition">← Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
