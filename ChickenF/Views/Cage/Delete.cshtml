@model ChickenF.Models.Cage

@{
    ViewData["Title"] = "Delete Cage";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-red-600 mb-4">Delete Cage</h1>
    <p class="text-gray-700 mb-6">Are you sure you want to delete the following cage?</p>

    <div class="space-y-4 text-gray-800">
        <div>
            <span class="font-semibold">Name:</span>
            <span class="ml-2">@Model.CageName</span>
        </div>
        <div>
            <span class="font-semibold">Type:</span>
            <span class="ml-2">@Model.CageType</span>
        </div>
        <div>
            <span class="font-semibold">Capacity:</span>
            <span class="ml-2">@Model.CageCapacity</span>
        </div>
        <div>
            <span class="font-semibold">Area:</span>
            <span class="ml-2">@Model.CageArea</span>
        </div>
    </div>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <div class="flex gap-4">
            <input type="submit" value="Delete" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition" />
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900 hover:underline transition">← Back to List</a>
        </div>
    </form>
</div>
