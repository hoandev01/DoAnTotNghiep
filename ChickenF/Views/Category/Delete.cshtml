@model ChickenF.Models.Category
@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-xl mx-auto mt-8 px-4">
    <h1 class="text-2xl font-bold text-red-600 mb-2">Delete Category</h1>
    <h4 class="text-gray-700 mb-6">Are you sure you want to delete this Category?</h4>

    <div class="bg-white shadow rounded-lg">
        <div class="p-6">
            <dl class="space-y-4 text-gray-800">
                <div class="flex">
                    <dt class="w-1/2 font-medium">Category Name:</dt>
                    <dd class="w-1/2">@Model.CategoryName</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/2 font-medium">Brooding Days:</dt>
                    <dd class="w-1/2">@Model.BroodingDays</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/2 font-medium">Growth Days:</dt>
                    <dd class="w-1/2">@Model.GrowthDays</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/2 font-medium">Pre-Sale Days:</dt>
                    <dd class="w-1/2">@Model.PreSaleDays</dd>
                </div>
                <div class="flex">
                    <dt class="w-1/2 font-medium">Ready-for-Sale Days:</dt>
                    <dd class="w-1/2">@Model.ReadyDays</dd>
                </div>
            </dl>
        </div>

        <div class="border-t px-6 py-4 bg-gray-50 flex gap-3">
            <form asp-action="Delete" method="post" class="flex gap-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit"
                        class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 text-sm font-medium shadow">
                    Delete
                </button>
                <a asp-action="Index"
                   class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 text-sm font-medium shadow">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>
