@model ChickenF.Models.Order

<h3>Order #@Model.Id</h3>
<p>Order Date: @Model.OrderDate.ToString("dd/MM/yyyy")</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.OrderDetailQuantity</td>
                <td>@item.OrderDetailPrice.ToString("N0") VNĐ</td>
                <td>@((item.OrderDetailQuantity * item.OrderDetailPrice).ToString("N0")) VNĐ</td>

            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a href="@Url.Action("MyOrders", "User")" class="btn btn-secondary">
        ← Back to order list
    </a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">🏠 Home</a>
</div>
