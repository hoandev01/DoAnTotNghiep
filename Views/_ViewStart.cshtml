@{
    var role = User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value;

    Layout = role switch
    {
        "Admin" => "~/Views/Shared/_LayoutAdmin.cshtml",
        "Employee" => "~/Views/Shared/_LayoutEmployee.cshtml",
        _ => "~/Views/Shared/_Layout.cshtml"
    };
}
