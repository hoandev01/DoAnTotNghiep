@model ChickenF.Models.Employee
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 px-6">
    <h1 class="text-3xl font-bold text-indigo-700 mb-8">Edit Employee Information</h1>

    <form asp-action="Edit" method="post" class="space-y-6 bg-white p-8 rounded-xl shadow">
        <input type="hidden" asp-for="Id" />

        <!-- Full Name -->
        <div>
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input asp-for="FullName"
                   class="block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="FullName" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Username -->
        <div>
            <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="Username"
                   class="block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Username" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Password -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input asp-for="Password" type="password"
                   class="block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Password" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Phone -->
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
            <input asp-for="Phone"
                   class="block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Phone" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Email"
                   class="block w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Buttons -->
        <div class="flex justify-between pt-6">
            <button type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded-md transition">
                Save
            </button>
            <a asp-action="Index"
               class="text-gray-600 underline hover:text-indigo-600 transition">
                Back
            </a>
        </div>
    </form>
</div>
