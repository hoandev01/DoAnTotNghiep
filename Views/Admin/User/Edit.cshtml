@model ChickenF.Models.User

@{
    bool isEdit = Model.Id != 0 && Model.Id != 2;
    ViewData["Title"] = isEdit ? "Edit" : "Create";
}

<div class="max-w-4xl mx-auto mt-12 px-6">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">@ViewData["Title"] User</h1>

    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" novalidate
          class="bg-white p-8 md:p-10 rounded-xl shadow-xl space-y-6">

        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <!-- Full Name -->
        <div>
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input asp-for="FullName" autocomplete="name"
                   class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="FullName" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Username -->
        <div>
            <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="Username" autocomplete="username"
                   class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Username" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Password -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input asp-for="Password" type="password" autocomplete="new-password"
                   class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Password" class="text-red-600 text-sm mt-1 block"></span>

            @if (isEdit)
            {
                <p class="text-gray-500 text-xs mt-1">Leave blank if you don't want to change the password.</p>
            }
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Email" type="email" autocomplete="email"
                   class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Email" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Phone -->
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
            <input asp-for="Phone" type="tel" autocomplete="tel"
                   class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Phone" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- Role -->
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
            <select name="SelectedRole"
                    class="block w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="Customer" selected="@(Model is ChickenF.Models.Customer ? "selected" : null)">Customer</option>
                <option value="Admin" selected="@(Model is ChickenF.Models.Admin ? "selected" : null)">Administrator</option>
                <option value="Employee" selected="@(Model is ChickenF.Models.Employee ? "selected" : null)">Employee</option>
            </select>
        </div>

        <!-- Actions -->
        <div class="flex items-center justify-between pt-6">
            <button type="submit"
                    class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 font-semibold rounded-md transition">
                @(isEdit ? "Save Changes" : "Create User")
            </button>
            <a asp-action="Index"
               class="text-sm text-gray-600 hover:text-indigo-600 underline">
                Cancel
            </a>
        </div>
    </form>
</div>
