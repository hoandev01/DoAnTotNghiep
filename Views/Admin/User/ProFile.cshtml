@model ChickenF.Models.User

<div class="max-w-md mx-auto bg-white shadow-lg rounded-2xl p-6 mt-8">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">Personal Information</h2>

    <div class="space-y-2 text-gray-700">
        <p><span class="font-medium">Full Name:</span> @Model.FullName</p>
        <p><span class="font-medium">Username:</span> @Model.Username</p>
        <p><span class="font-medium">Email:</span> @Model.Email</p>
        <p><span class="font-medium">Phone Number:</span> @Model.Phone</p>
    </div>

    <div class="mt-6">
        <a asp-action="Edit" asp-controller="User"
           class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-200">
            Edit Information
        </a>
    </div>
</div>
