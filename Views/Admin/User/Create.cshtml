@model ChickenF.Models.User

@{
    bool isEdit = Model.Id != 0;
    ViewData["Title"] = isEdit ? "Sửa Người dùng" : "Tạo Người dùng mới";
}

<div class="max-w-4xl mx-auto mt-12 px-6">

    <h1 class="text-5xl font-extrabold mb-10 text-gray-900">@ViewData["Title"]</h1>

    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" novalidate class="bg-white p-10 rounded-xl shadow space-y-6">

        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div>
            <label asp-for="FullName" class="block text-gray-700 font-semibold mb-2">Tên</label>
            <input asp-for="FullName" autocomplete="name" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="FullName" class="text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Username" class="block text-gray-700 font-semibold mb-2">Tên đăng nhập</label>
            <input asp-for="Username" autocomplete="username" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Username" class="text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-gray-700 font-semibold mb-2">Mật khẩu</label>
            <input asp-for="Password" type="password" autocomplete="new-password" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Password" class="text-red-600 mt-1 block"></span>
            @if (isEdit)
            {
                <p class="text-gray-500 text-sm mt-1">Để trống nếu không muốn thay đổi mật khẩu</p>
            }
        </div>

        <div>
            <label asp-for="Email" class="block text-gray-700 font-semibold mb-2">Email</label>
            <input asp-for="Email" type="email" autocomplete="email" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Email" class="text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Phone" class="block text-gray-700 font-semibold mb-2">Số điện thoại</label>
            <input asp-for="Phone" autocomplete="tel" type="tel" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Phone" class="text-red-600 mt-1 block"></span>
        </div>

        <div>
            <label class="block text-gray-700 font-semibold mb-2">Vai trò</label>
            <select name="SelectedRole" class="w-full rounded-md border border-gray-300 px-5 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option value="Customer" selected="@(Model is ChickenF.Models.Customer ? "selected" : null)">Customer</option>
                <option value="Admin" selected="@(Model is ChickenF.Models.Admin ? "selected" : null)">Administrator</option>
                <option value="Employee" selected="@(Model is ChickenF.Models.Employee ? "selected" : null)">Staff</option>
            </select>
        </div>


        <div class="flex justify-between pt-6">
            <button type="submit" class="bg-black text-white px-8 py-4 font-semibold rounded-md hover:bg-gray-900 transition">
                @(isEdit ? "Save" : "Create")
            </button>
            <a asp-action="Index" class="text-indigo-600 underline hover:text-indigo-900">Hủy</a>
        </div>
    </form>
</div>
