@model ChickenF.Models.User

@{
    ViewData["Title"] = "Xóa Người dùng";
}

<div class="max-w-md mx-auto mt-12 p-8 bg-white rounded-xl shadow space-y-6">

    <h1 class="text-4xl font-extrabold mb-6 text-gray-900">Xóa Người dùng</h1>

    <p>Bạn có chắc chắn muốn xóa người dùng này không?</p>

    <dl class="divide-y divide-gray-200">
        <div class="py-2 flex justify-between">
            <dt class="font-semibold text-gray-700">Tên</dt>
            <dd>@Model.FullName</dd>
        </div>
        <div class="py-2 flex justify-between">
            <dt class="font-semibold text-gray-700">Tên đăng nhập</dt>
            <dd>@Model.Username</dd>
        </div>
        <div class="py-2 flex justify-between">
            <dt class="font-semibold text-gray-700">Email</dt>
            <dd>@Model.Email</dd>
        </div>

    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="w-full rounded-md bg-red-600 text-white py-3 font-semibold hover:bg-red-700 transition">
            Xóa Người dùng
        </button>
        <a asp-action="Index" class="block w-full text-center text-indigo-600 hover:underline">
            Hủy
        </a>
    </form>
</div>
