@model IEnumerable<ChickenF.Models.User>

@{
    ViewData["Title"] = "User";
}

<div class="max-w-6xl mx-auto mt-12 px-6">

    <h1 class="text-5xl font-extrabold mb-10 text-gray-900">List User</h1>

    <div class="mb-6">
        <a asp-action="Create" class="inline-block bg-black text-white text-lg font-semibold px-6 py-3 rounded-lg hover:bg-gray-800 transition">
            Thêm Người dùng mới
        </a>
    </div>

    <div class="overflow-x-auto bg-white rounded-xl shadow p-6">
        <table class="min-w-full text-gray-700">
            <thead>
                <tr class="border-b border-gray-300">
                    <th class="text-left px-4 py-3">FullName</th>
                    <th class="text-left px-4 py-3">UserName</th>
                    <th class="text-left px-4 py-3">Email</th>
                    <th class="text-left px-4 py-3">PhoneNumber</th>
                    <th class="text-left px-4 py-3">Role</th>
                    <th class="text-right px-4 py-3">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-4 py-3">@item.FullName</td>
                        <td class="px-4 py-3">@item.Username</td>
                        <td class="px-4 py-3">@item.Email</td>
                        <td class="px-4 py-3">@item.Phone</td>
                        <td class="px-4 py-3">
                            @{
                                string roleName = Model switch
                                {
                                    ChickenF.Models.Admin => "Administrator",
                                    ChickenF.Models.Employee => "Staff",
                                    ChickenF.Models.Customer => "Customer",
                                    _ => "Unknown"
                                };
                            }
                            @roleName
                        </td>
                        <td class="px-4 py-3 text-right space-x-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-600 hover:text-gray-900">Chi tiết</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
