@model ChickenF.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded shadow">
    <h1 class="text-2xl font-semibold mb-6 text-gray-800">🛠️ Edit Product</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-4">
            <label asp-for="FlockId" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="FlockId" class="w-full border border-gray-300 p-2 rounded" asp-items="ViewBag.FlockId"></select>
            <span asp-validation-for="FlockId" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ProductName" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="ProductName" class="w-full border border-gray-300 p-2 rounded" />
            <span asp-validation-for="ProductName" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Image" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="Image" class="w-full border border-gray-300 p-2 rounded" />
            <span asp-validation-for="Image" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Price" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="Price" class="w-full border border-gray-300 p-2 rounded" />
            <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ProductStock" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="ProductStock" class="w-full border border-gray-300 p-2 rounded" />
            <span asp-validation-for="ProductStock" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DateCreated" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="DateCreated" type="date" class="w-full border border-gray-300 p-2 rounded" />
            <span asp-validation-for="DateCreated" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ProductDescription" class="block font-medium text-gray-700 mb-1"></label>
            <textarea asp-for="ProductDescription" class="w-full border border-gray-300 p-2 rounded h-32 resize-none"></textarea>
            <span asp-validation-for="ProductDescription" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between mt-6">
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
                💾 Save
            </button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-800">← Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
