@model ChickenF.Models.Product
@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Product Details";
}

<div class="max-w-2xl mx-auto bg-white shadow-md rounded p-6 mt-10">
    <h1 class="text-2xl font-semibold mb-6 text-gray-800">📦 Product Details</h1>

    <div class="grid grid-cols-1 gap-4">
        <div>
            <span class="font-semibold text-gray-700">Product Name:</span>
            <p class="text-gray-900">@Model.ProductName</p>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Price:</span>
            <p class="text-gray-900">@Model.Price.ToString("C")</p>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Stock:</span>
            <p class="text-gray-900">@Model.ProductStock</p>
        </div>
        <div>
            <span class="font-semibold text-gray-700">Description:</span>
            <p class="text-gray-900 whitespace-pre-line">@Model.ProductDescription</p>
        </div>
    </div>

    <div class="flex justify-start gap-4 mt-6">
        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">✏️ Edit</a>
        <a asp-action="Index"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">← Back to List</a>
    </div>
</div>
