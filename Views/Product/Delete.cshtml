@model ChickenF.Models.Product
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Delete Product";
}

<div class="max-w-2xl mx-auto bg-white shadow-md rounded p-6 mt-10">
    <h1 class="text-2xl font-semibold text-red-600 mb-4">🗑️ Delete Product</h1>

    <p class="mb-6 text-gray-700">Are you sure you want to delete this product?</p>

    <div class="bg-gray-50 rounded p-4 mb-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Product Details</h2>
        <div class="space-y-2">
            <div>
                <span class="font-medium text-gray-700">Product Name:</span>
                <p class="text-gray-900">@Model.ProductName</p>
            </div>
            <div>
                <span class="font-medium text-gray-700">Price:</span>
                <p class="text-gray-900">@Model.Price.ToString("C")</p>
            </div>
            <div>
                <span class="font-medium text-gray-700">Stock:</span>
                <p class="text-gray-900">@Model.ProductStock</p>
            </div>
            <div>
                <span class="font-medium text-gray-700">Description:</span>
                <p class="text-gray-900 whitespace-pre-line">@Model.ProductDescription</p>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="flex gap-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit"
                class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
            ✅ Confirm Delete
        </button>
        <a asp-action="Index"
           class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400 transition">
            ❌ Cancel
        </a>
    </form>
</div>
