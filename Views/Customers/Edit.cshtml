@model ChickenF.Models.Customer
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold text-indigo-700 mb-8">Edit Customer Information</h1>

    <form asp-action="Edit" method="post" class="space-y-6 bg-white p-8 rounded-xl shadow-md">
        <input type="hidden" asp-for="Id" />

        <!-- Full Name -->
        <div>
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
            <input asp-for="FullName"
                   class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Username -->
        <div>
            <label asp-for="Username" class="block text-sm font-medium text-gray-700">Username</label>
            <input asp-for="Username"
                   class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Username" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Password -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
            <input asp-for="Password" type="password"
                   class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Phone -->
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
            <input asp-for="Phone"
                   class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input asp-for="Email"
                   class="mt-1 w-full rounded-md border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
        </div>

        <!-- Buttons -->
        <div class="flex justify-between pt-4">
            <a asp-action="Index"
               class="inline-flex items-center bg-gray-300 hover:bg-gray-400 text-gray-800 text-sm font-medium px-5 py-2 rounded-md transition shadow">
                ← Back
            </a>
            <button type="submit"
                    class="inline-flex items-center bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium px-5 py-2 rounded-md transition shadow">
                💾 Save
            </button>
        </div>
    </form>
</div>
