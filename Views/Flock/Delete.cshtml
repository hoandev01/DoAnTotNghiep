@model ChickenF.Models.Flock

@{
    ViewData["Title"] = "Delete Flock";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
        <strong class="font-bold">⚠ Cannot Delete:</strong>
        <span class="block sm:inline">@TempData["Error"]</span>
    </div>
}

<div class="max-w-3xl mx-auto px-6 py-10">
    <h1 class="text-2xl font-semibold text-red-600 mb-6">Delete Flock</h1>

    <h3 class="text-lg text-gray-800 mb-4">Are you sure you want to delete this flock?</h3>

    <div class="bg-white border rounded-md p-6 shadow mb-6">
        <h4 class="text-xl font-bold text-gray-700 mb-4">Flock Details</h4>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4 text-gray-700">
            <div>
                <dt class="font-medium">Flock Name</dt>
                <dd>@Model.FlockName</dd>
            </div>
            <div>
                <dt class="font-medium">Quantity</dt>
                <dd>@Model.FlockQuantity</dd>
            </div>
            <div>
                <dt class="font-medium">Cage</dt>
                <dd>@Model.Cage?.CageName</dd>
            </div>
            <div>
                <dt class="font-medium">Category</dt>
                <dd>@Model.Category?.CategoryName</dd>
            </div>
            <div>
                <dt class="font-medium">Chicken Size</dt>
                <dd>@Model.ChickenSize</dd>
            </div>
            <div>
                <dt class="font-medium">Feed Type</dt>
                <dd>@Model.FeedType</dd>
            </div>
            <div>
                <dt class="font-medium">Status</dt>
                <dd>@Model.Status</dd>
            </div>
            <div>
                <dt class="font-medium">Growth Level</dt>
                <dd>@Model.GrowthLevel</dd>
            </div>
            <div>
                <dt class="font-medium">Day In</dt>
                <dd>@Model.DayIn.ToString("yyyy-MM-dd")</dd>
            </div>
            <div class="sm:col-span-2">
                <dt class="font-medium">Note</dt>
                <dd>@Model.FlockNote</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="flex items-center gap-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700 transition">Confirm Delete</button>
        <a asp-action="Index" class="bg-gray-500 text-white px-5 py-2 rounded hover:bg-gray-600 transition">Back to List</a>
    </form>
</div>
