@model ChickenF.Models.Flock

@{
    ViewData["Title"] = "Edit Flock";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Edit Flock</h1>
    <hr class="mb-6" />

    <form asp-action="Edit" method="post" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        <input type="hidden" asp-for="Id" />

        <!-- FlockName -->
        <div>
            <label asp-for="FlockName" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="FlockName" class="w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />
            <span asp-validation-for="FlockName" class="text-red-600 text-sm"></span>
        </div>

        <!-- Cage -->
        <div>
            <label asp-for="CageId" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="CageId" class="w-full border rounded px-3 py-2" asp-items="@(ViewData["CageId"] as SelectList)"></select>
            <span asp-validation-for="CageId" class="text-red-600 text-sm"></span>
        </div>

        <!-- Category -->
        <div>
            <label asp-for="CategoryId" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="CategoryId" class="w-full border rounded px-3 py-2" asp-items="@(ViewData["CategoryId"] as SelectList)"></select>
            <span asp-validation-for="CategoryId" class="text-red-600 text-sm"></span>
        </div>

        <!-- Quantity -->
        <div>
            <label asp-for="FlockQuantity" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="FlockQuantity" type="number" min="1" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="FlockQuantity" class="text-red-600 text-sm"></span>
        </div>

        <!-- ChickenSize -->
        <div>
            <label asp-for="ChickenSize" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="ChickenSize" class="w-full border rounded px-3 py-2">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
            </select>
            <span asp-validation-for="ChickenSize" class="text-red-600 text-sm"></span>
        </div>

        <!-- FeedType -->
        <div>
            <label asp-for="FeedType" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="FeedType" class="w-full border rounded px-3 py-2">
                <option value="Organic">Organic</option>
                <option value="Industrial">Industrial</option>
            </select>
            <span asp-validation-for="FeedType" class="text-red-600 text-sm"></span>
        </div>

        <!-- Status -->
        <div>
            <label asp-for="Status" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="Status" class="w-full border rounded px-3 py-2">
                <option value="Still Raising">Still Raising</option>
                <option value="Sold">Sold</option>
            </select>
            <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
        </div>

        <!-- GrowthLevel -->
        <div>
            <label asp-for="GrowthLevel" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="GrowthLevel" class="w-full border rounded px-3 py-2">
                <option value="Weak">Weak</option>
                <option value="Normal">Normal</option>
                <option value="Good">Good</option>
            </select>
            <span asp-validation-for="GrowthLevel" class="text-red-600 text-sm"></span>
        </div>

        <!-- DayIn -->
        <div>
            <label asp-for="DayIn" class="block font-medium text-gray-700 mb-1">Day In (Start Raising Date)</label>
            <input asp-for="DayIn" type="date" class="w-full border rounded px-3 py-2" />
            <span asp-validation-for="DayIn" class="text-red-600 text-sm"></span>
        </div>

        <!-- Note -->
        <div>
            <label asp-for="FlockNote" class="block font-medium text-gray-700 mb-1"></label>
            <textarea asp-for="FlockNote" class="w-full border rounded px-3 py-2"></textarea>
            <span asp-validation-for="FlockNote" class="text-red-600 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save</button>
            <a asp-action="Index" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
