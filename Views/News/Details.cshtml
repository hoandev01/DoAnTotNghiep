@model ChickenF.Models.NewsArticle

@{
    ViewData["Title"] = "News Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-4xl mx-auto py-10 px-6">
    <h2 class="text-3xl font-bold text-blue-700 mb-2">@Model.Title</h2>
    <p class="text-sm text-gray-500 mb-4">🗓 Published: @Model.PublishedDate.ToString("dd/MM/yyyy")</p>

    @if (!string.IsNullOrEmpty(Model.ImageNews))
    {
        <img src="@Model.ImageNews" alt="News Image"
             class="w-full max-h-[400px] object-cover rounded shadow mb-6" />
    }

    @if (!string.IsNullOrEmpty(Model.Summary))
    {
        <div class="bg-gray-50 border-l-4 border-blue-500 text-gray-700 p-4 rounded mb-6">
            <p class="italic font-medium">“@Model.Summary”</p>
        </div>
    }

    <div class="prose max-w-none text-justify text-gray-800 leading-relaxed" style="white-space: pre-line">
        @Html.Raw(Model.Content)
    </div>

    <div class="mt-8">
        <a asp-action="Index" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded shadow transition">
            ← Back to News List
        </a>
    </div>
</div>
