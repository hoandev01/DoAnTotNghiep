@model ChickenF.Models.NewsArticle

@{
    ViewData["Title"] = "Edit News";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto py-10 px-6">
    <h2 class="text-2xl font-bold text-blue-700 mb-6">📝 Edit News Article</h2>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <!-- Title -->
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700">Title</label>
            <input asp-for="Title" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Title" class="text-sm text-red-600"></span>
        </div>

        <!-- Image URL -->
        <div>
            <label asp-for="ImageNews" class="block text-sm font-medium text-gray-700">Image URL</label>
            <input asp-for="ImageNews" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="ImageNews" class="text-sm text-red-600"></span>
        </div>

        <!-- Summary -->
        <div>
            <label asp-for="Summary" class="block text-sm font-medium text-gray-700">Summary</label>
            <textarea asp-for="Summary" rows="3"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Summary" class="text-sm text-red-600"></span>
        </div>

        <!-- Content -->
        <div>
            <label asp-for="Content" class="block text-sm font-medium text-gray-700">Content</label>
            <textarea asp-for="Content" rows="8"
                      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Content" class="text-sm text-red-600"></span>
        </div>

        <!-- Buttons -->
        <div class="flex gap-3">
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded shadow transition">
                ✅ Update
            </button>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-5 py-2 rounded shadow transition">
                ❌ Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
