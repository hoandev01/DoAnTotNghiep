@model ChickenF.Models.OrderDetail
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Edit Order Detail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label fw-bold"></label>
        <input asp-for="OrderId" class="form-control" />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label fw-bold"></label>
        <input asp-for="ProductId" class="form-control" />
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OrderDetailQuantity" class="form-label fw-bold"></label>
        <input asp-for="OrderDetailQuantity" class="form-control" />
        <span asp-validation-for="OrderDetailQuantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OrderDetailPrice" class="form-label fw-bold"></label>
        <input asp-for="OrderDetailPrice" class="form-control" />
        <span asp-validation-for="OrderDetailPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
</form>

<div>
    <h4>Validation Errors</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>