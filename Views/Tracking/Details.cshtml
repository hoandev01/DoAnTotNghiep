@model ChickenF.Models.Tracking

@{
    ViewData["Title"] = "Tracking Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-4xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">📋 Tracking Details</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-700">
        <div>
            <span class="font-semibold">ID:</span> @Model.Id
        </div>
        <div>
            <span class="font-semibold">Flock:</span> @Model.Flock?.FlockName
        </div>
        <div>
            <span class="font-semibold">Tracking Date:</span> @Model.TrackingDate.ToString("yyyy-MM-dd")
        </div>
        <div>
            <span class="font-semibold">Health Status:</span> @Model.HealthStatus
        </div>
        <div>
            <span class="font-semibold">Temperature:</span> @Model.Temperature
        </div>
        <div>
            <span class="font-semibold">Humidity:</span> @Model.Humidity
        </div>
        <div>
            <span class="font-semibold">Feed Amount:</span> @Model.FeedCost
        </div>
        <div class="col-span-full">
            <span class="font-semibold">Note:</span>
            <p class="mt-1 text-gray-600">@Model.Note</p>
        </div>
    </div>

    <div class="mt-6 flex gap-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-block px-4 py-2 bg-yellow-400 text-white rounded hover:bg-yellow-500 transition">✏️ Edit</a>
        <a asp-action="Index" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">← Back to List</a>
    </div>
</div>
