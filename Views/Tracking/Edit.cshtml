@model ChickenF.Models.Tracking

@{
    ViewData["Title"] = "Edit Tracking";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">✏️ Edit Tracking</h1>

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="FlockId" class="block text-sm font-medium text-gray-700">Flock</label>
            <select asp-for="FlockId" asp-items="ViewBag.FlockId" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
            </select>
            <span asp-validation-for="FlockId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="TrackingDate" class="block text-sm font-medium text-gray-700">Tracking Date</label>
            <input asp-for="TrackingDate" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" type="date" />
            <span asp-validation-for="TrackingDate" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="HealthStatus" class="block text-sm font-medium text-gray-700">Health Status</label>
            <input asp-for="HealthStatus" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="HealthStatus" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Temperature" class="block text-sm font-medium text-gray-700">Temperature</label>
            <input asp-for="Temperature" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Temperature" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Humidity" class="block text-sm font-medium text-gray-700">Humidity</label>
            <input asp-for="Humidity" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Humidity" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="FeedCost" class="block text-sm font-medium text-gray-700">Feed Amount</label>
            <input asp-for="FeedCost" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="FeedCost" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Note" class="block text-sm font-medium text-gray-700">Note</label>
            <textarea asp-for="Note" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Note" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-start gap-4 pt-4">
            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">💾 Save</button>
            <a asp-action="Index" class="text-gray-600 hover:underline hover:text-gray-800 transition">← Cancel</a>
        </div>
    </form>
</div>
