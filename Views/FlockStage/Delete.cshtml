@model ChickenF.Models.FlockStage

@{
    ViewData["Title"] = "Delete Stage";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container mx-auto px-4 py-6 max-w-2xl">
    <h2 class="text-2xl font-semibold text-red-600 mb-6">Are you sure you want to delete this stage?</h2>

    <div class="bg-white p-6 rounded shadow mb-4">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <dt class="font-medium">Stage</dt>
                <dd class="text-gray-700">@Model.StageName</dd>
            </div>
            <div>
                <dt class="font-medium">Start Date</dt>
                <dd class="text-gray-700">@Model.StartDate.ToShortDateString()</dd>
            </div>
            <div>
                <dt class="font-medium">End Date</dt>
                <dd class="text-gray-700">@Model.EndDate?.ToShortDateString()</dd>
            </div>
            <div class="md:col-span-2">
                <dt class="font-medium">Note</dt>
                <dd class="text-gray-700 whitespace-pre-line">@Model.Note</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FlockId" />

        <div class="flex gap-4">
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Yes, Delete</button>
            <a asp-action="Index" asp-route-flockId="@Model.FlockId" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Cancel</a>
        </div>
    </form>
</div>
