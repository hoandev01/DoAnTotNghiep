@model ChickenF.Models.FlockStage

@{
    ViewData["Title"] = "Edit Stage";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="container mx-auto px-4 py-6 max-w-2xl">
    <h2 class="text-2xl font-semibold mb-6">Edit Stage</h2>

    <form asp-action="Edit" method="post" class="bg-white p-6 rounded shadow">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FlockId" />

        <div class="mb-4">
            <label asp-for="StageName" class="block font-medium mb-1"></label>
            <input asp-for="StageName" class="form-input w-full" />
            <span asp-validation-for="StageName" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="StartDate" class="block font-medium mb-1"></label>
            <input asp-for="StartDate" type="date" class="form-input w-full" />
        </div>

        <div class="mb-4">
            <label asp-for="EndDate" class="block font-medium mb-1"></label>
            <input asp-for="EndDate" type="date" class="form-input w-full" />
        </div>

        <div class="mb-4">
            <label asp-for="Note" class="block font-medium mb-1"></label>
            <textarea asp-for="Note" class="form-textarea w-full"></textarea>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Save</button>
            <a asp-action="Index" asp-route-flockId="@Model.FlockId" class="bg-gray-500 text-white px-4 py-2 rounded">Back</a>
        </div>
    </form>
</div>
