@model ChickenF.Models.Cage

@{
    ViewData["Title"] = "Edit Cage";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 bg-white p-8 shadow rounded-md">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6">Edit Cage</h1>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="CageName" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageName" class="w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200" />
            <span asp-validation-for="CageName" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="CageType" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="CageType" class="w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>
            </select>
            <span asp-validation-for="CageType" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="CageCapacity" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageCapacity" class="w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200" />
            <span asp-validation-for="CageCapacity" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="CageArea" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageArea" class="w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200" />
            <span asp-validation-for="CageArea" class="text-sm text-red-600"></span>
        </div>

        <div class="flex items-center gap-4 mt-4">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Save</button>
            <a asp-action="Index" class="text-gray-600 hover:underline">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}