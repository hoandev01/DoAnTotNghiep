@model ChickenF.Models.Cage

@{
    ViewData["Title"] = "Create Cage";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Create Cage</h1>

    <form asp-action="Create" method="post" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

        <div>
            <label asp-for="CageName" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageName" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="CageName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="CageType" class="block font-medium text-gray-700 mb-1"></label>
            <select asp-for="CageType" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" id="CageType">
                <option value="">-- Select Type --</option>
                <option value="Closed">Closed</option>
                <option value="Elevated">Elevated</option>
                <option value="Open">Open</option>
                <option value="Semi-open">Semi-open</option>
            </select>
            <span asp-validation-for="CageType" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="CageCapacity" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageCapacity" type="number" class="w-full border border-gray-300 rounded-md px-3 py-2 bg-gray-100" readonly id="CageCapacity" />
            <span asp-validation-for="CageCapacity" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="CageArea" class="block font-medium text-gray-700 mb-1"></label>
            <input asp-for="CageArea" class="w-full border border-gray-300 rounded-md px-3 py-2 bg-gray-100" readonly id="CageArea" />
            <span asp-validation-for="CageArea" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-4 mt-6">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                ➕ Create
            </button>
            <a asp-action="Index" class="text-gray-600 hover:text-gray-900 hover:underline transition">
                ← Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const cageTypeData = {
            "Closed":     { capacity: 2000, area: 200 },
            "Open":       { capacity: 1500, area: 250 },
            "Semi-open":  { capacity: 1000, area: 150 },
            "Elevated":   { capacity: 1800, area: 220 }
        };

        document.getElementById("CageType").addEventListener("change", function () {
            const selectedType = this.value;
            const capacityInput = document.getElementById("CageCapacity");
            const areaInput = document.getElementById("CageArea");

            if (cageTypeData[selectedType]) {
                capacityInput.value = cageTypeData[selectedType].capacity;
                areaInput.value = cageTypeData[selectedType].area;
            } else {
                capacityInput.value = "";
                areaInput.value = "";
            }
        });
    </script>
}
