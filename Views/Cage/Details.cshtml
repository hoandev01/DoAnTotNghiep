@model ChickenF.Models.Cage

@{
    ViewData["Title"] = "Cage Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold text-gray-800 mb-4">Cage Details</h1>

    <div class="space-y-4 text-gray-700">
        <div>
            <span class="font-semibold">Name:</span>
            <span class="ml-2">@Model.CageName</span>
        </div>
        <div>
            <span class="font-semibold">Type:</span>
            <span class="ml-2">@Model.CageType</span>
        </div>
        <div>
            <span class="font-semibold">Capacity:</span>
            <span class="ml-2">@Model.CageCapacity</span>
        </div>
        <div>
            <span class="font-semibold">Area:</span>
            <span class="ml-2">@Model.CageArea</span>
        </div>
    </div>

    <div class="mt-6 flex gap-4">
        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            ✏️ Edit
        </a>

        <a asp-action="Index"
           class="text-gray-600 hover:underline hover:text-gray-800 transition">
            ← Back to List
        </a>
    </div>
</div>
